<?import gs_gohel_final.View?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:controller="gs_gohel_final.Controller" xmlns:fx="http://javafx.com/fxml">
    <top>
        <BorderPane prefHeight="35" style="-fx-background-color: #6a91d1; -fx-padding: 10px, 5px, 10px, 5px" >
            <center><Label style="-fx-font-size: 200%; -fx-text-fill: black"
                           text= "Pendulum Simulator"  /></center>
        </BorderPane>
    </top>
    <left><HBox prefHeight="35" style="-fx-padding: 10px, 10px, 10px, 10px; -fx-background-color: #6a91d1"></HBox></left>
    <right><HBox prefHeight="35" style="-fx-padding: 10px, 10px, 10px, 10px; -fx-background-color: #6a91d1"></HBox></right>

    <center>
        <View fx:id="view"/>
    </center>
    <bottom>
        <HBox prefHeight="75" style="-fx-padding: 10px, 10px, 10px, 10px; -fx-background-color: #6a91d1">
            <Label style="-fx-font-size: 160%; -fx-text-fill: white"
                   text="  PRESS ---- Single pendulum: '1' | Double Pendulum: '2' | &#xD;         Pause: 'P' (press 'R' to reset) | Cycle colors: 'C'" />
        </HBox>
    </bottom>
</BorderPane>
